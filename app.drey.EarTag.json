{
    "app-id" : "app.drey.EarTag",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "eartag",
    "finish-args" : [
		"--filesystem=xdg-pictures:ro",
		"--filesystem=xdg-music:rw",
		"--filesystem=xdg-download:rw",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "data/flatpak-python-modules.json",
        {
            "name" : "eartag",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/knuxify/eartag.git",
                    "tag": "0.2.1",
                    "commit": "af529a703c3b94834dba7fb0444715375b2ef789"
                }
            ]
        }
    ]
}
