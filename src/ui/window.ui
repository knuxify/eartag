<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EartagWindow" parent="AdwApplicationWindow">
    <property name="default-width">900</property>
    <property name="default-height">700</property>
    <property name="width-request">360</property>
    <property name="height-request">200</property>

    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 600sp</condition>
        <setter object="split_view" property="collapsed">True</setter>
      </object>
    </child>

    <child>
      <object class="GtkOverlay" id="overlay">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>

        <child type="overlay">
          <object class="GtkRevealer" id="drop_highlight_revealer">
            <property name="receives-default">false</property>
            <property name="can-focus">false</property>
            <property name="can-target">false</property>

            <property name="transition-type">crossfade</property>
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>

            <child>
              <object class="AdwBin">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>

                <style>
                  <class name="drag-target"/>
                </style>

                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="valign">center</property>
                    <property name="spacing">36</property>

                    <property name="margin-top">24</property>
                    <property name="margin-bottom">24</property>
                    <property name="margin-start">24</property>
                    <property name="margin-end">24</property>

                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">document-send-symbolic</property>
                        <property name="pixel-size">96</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkLabel">
                        <!-- TRANSLATORS: Displayed when drag-and-dropping a music file onto the window -->
                        <property name="label" translatable="yes">Drop a file to add it to the opened file list</property>
                        <property name="wrap">true</property>

                        <style>
                          <class name="title-1"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwToastOverlay" id="toast_overlay">
            <child>
              <object class="GtkStack" id="container_stack">
                <property name="transition-type">crossfade</property>

                <child>
                  <object class="GtkBox" id="no_file">
                    <property name="orientation">vertical</property>

                    <child>
                      <object class="AdwHeaderBar" id="empty_headerbar">
                        <property name="title-widget"><object class="GtkLabel"/></property>
                        <style>
                          <class name="flat"/>
                        </style>

                        <child type="end">
                          <object class="GtkMenuButton" id="empty_primary_menu_button">
                            <property name="icon-name">open-menu-symbolic</property>
                            <property name="menu-model">primary_menu</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <child>
                      <object class="EartagNoFile" id="no_file_widget"/>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="AdwOverlaySplitView" id="split_view">
                    <property name="sidebar">
                      <object class="AdwToolbarView" id="sidebar_view">
                        <property name="width-request">300</property>

                        <child type="top">
                          <object class="AdwHeaderBar" id="sidebar_headerbar">
                            <property name="show-end-title-buttons">false</property>
                            <property name="title-widget"><object class="GtkLabel"/></property>

                            <child type="start">
                              <object class="GtkButton" id="save_button">
                                <property name="sensitive">false</property>
                                <property name="label" translatable="yes">Save</property>
                                <signal name="clicked" handler="on_save"/>

                                <style>
                                  <class name="suggested-action"/>
                                </style>
                              </object>
                            </child>

                            <child type="start">
                              <object class="GtkButton" id="sort_button">
                                <property name="icon-name">view-sort-descending-symbolic</property>
                                <signal name="clicked" handler="run_sort"/>
                                <!-- TRANSLATORS: Tooltip for button used to sort files in the opened file list -->
                                <property name="tooltip-text" translatable="yes">Sort files by track number, album, name</property>
                              </object>
                            </child>

                            <child type="end">
                              <object class="GtkButton" id="hide_sidebar_button">
                                <property name="icon-name">go-previous-symbolic</property>
                                <property name="halign">start</property>
                                <!-- TRANSLATORS: Tooltip for the button used to close the file list sidebar -->
                                <property name="tooltip-text" translatable="yes">Close file list</property>
                                <signal name="clicked" handler="hide_sidebar"/>
                                <binding name="visible">
                                  <lookup name="collapsed">split_view</lookup>
                                </binding>
                              </object>
                            </child>

                            <child type="end">
                              <object class="GtkButton" id="insert_button">
                                <property name="halign">end</property>
                                <property name="icon-name">list-add-symbolic</property>
                                <signal name="clicked" handler="insert_file"/>
                                <!-- TRANSLATORS: Tooltip for button used to open a file that will be inserted into the file queue -->
                                <property name="tooltip-text" translatable="yes">Add file</property>
                              </object>
                            </child>

                            <child type="end">
                              <object class="GtkToggleButton" id="select_multiple_button">
                                <property name="icon-name">selection-mode-symbolic</property>
                                <!-- TRANSLATORS: Tooltip for button used to open a file that will be inserted into the file queue -->
                                <property name="tooltip-text" translatable="yes">Select multiple files</property>
                              </object>
                            </child>

                            <child type="end">
                              <object class="GtkToggleButton" id="sidebar_search_button">
                                <property name="icon-name">edit-find-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Search opened files</property>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child type="top">
                          <object class="GtkSearchBar" id="search_bar">
                            <property name="hexpand">false</property>
                            <child>
                              <object class="GtkSearchEntry" id="search_entry">
                                <property name="hexpand">true</property>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child type="top">
                          <object class="GtkRevealer" id="loading_progressbar_revealer">
                            <child>
                              <object class="GtkProgressBar" id="loading_progressbar">
                                <style>
                                  <class name="osd"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkStack" id="sidebar_list_stack">
                            <property name="transition-type">crossfade</property>

                            <child>
                              <object class="GtkScrolledWindow" id="sidebar_list_scroll">
                                <property name="hscrollbar-policy">never</property>
                                <property name="vexpand">true</property>
                                <property name="min-content-width">300</property>
                                <property name="max-content-width">400</property>

                                <child>
                                  <object class="EartagFileList" id="sidebar_file_list">
                                    <style>
                                      <class name="navigation-sidebar"/>
                                    </style>
                                  </object>
                                </child>
                              </object>
                            </child>

                            <child>
                              <object class="GtkBox" id="sidebar_no_files"/>
                            </child>

                            <child>
                              <object class="AdwStatusPage" id="no_results">
                                <property name="icon-name">system-search-symbolic</property>
                                <property name="title" translatable="yes">No Results Found</property>
                                <property name="description" translatable="yes">Try a different search query.</property>

                                <style>
                                  <class name="compact"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child type="bottom">
                          <object class="GtkActionBar" id="sidebar_action_bar">
                            <child type="start">
                              <object class="GtkButton" id="select_all_button">
                                <property name="icon-name">edit-select-all-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Select all files</property>
                                <signal name="clicked" handler="select_all"/>
                              </object>
                            </child>

                            <child type="center">
                              <object class="GtkLabel" id="selected_message_label">
                                <style>
                                  <class name="dim-label"/>
                                </style>
                              </object>
                            </child>

                            <child type="end">
                              <object class="GtkButton" id="remove_selected_button">
                                <property name="icon-name">user-trash-symbolic</property>
                                <property name="tooltip-text" translatable="yes">Remove selected files</property>
                                <signal name="clicked" handler="remove_selected"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>

                    </property>

                    <property name="content">
                      <object class="AdwToolbarView" id="container">
                        <child type="top">
                          <object class="AdwHeaderBar" id="headerbar">
                            <property name="show-start-title-buttons">false</property>

                            <child type="start">
                              <object class="GtkButton" id="show_sidebar_button">
                                <property name="icon-name">view-queue-symbolic</property>
                                <!-- TRANSLATORS: Tooltip for the button used to close the file list sidebar -->
                                <property name="tooltip-text" translatable="yes">Show file list</property>
                                <signal name="clicked" handler="show_sidebar"/>
                                <binding name="visible">
                                  <lookup name="collapsed">split_view</lookup>
                                </binding>
                              </object>
                            </child>

                            <child type="title">
                              <object class="AdwWindowTitle" id="window_title">
                                <property name="title">Ear Tag</property>
                              </object>
                            </child>

                            <child type="end">
                              <object class="GtkMenuButton" id="primary_menu_button">
                                <property name="icon-name">open-menu-symbolic</property>
                                <property name="menu-model">primary_menu</property>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="EartagFileView" id="file_view"/>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Open File</attribute>
        <attribute name="action">app.open_file</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">O_pen Folder</attribute>
        <attribute name="action">app.open_folder</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Rename Selected Files</attribute>
        <attribute name="action">app.rename</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Identify Selected Files</attribute>
        <attribute name="action">app.identify</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Settings</attribute>
        <attribute name="action">app.settings</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Ear Tag</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
