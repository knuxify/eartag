<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EartagNoFile" parent="AdwBin">
    <child>
      <object class="GtkWindowHandle">
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>
        <child>
          <object class="AdwStatusPage" id="nofile_status">
            <property name="icon-name">app.drey.EarTag</property>
            <property name="title">Ear Tag</property>
            <property name="description" translatable="yes">Open or drag in some audio files to edit their metadata.</property>
            <style>
              <class name="nofiles"/>
            </style>

            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="spacing">12</property>

                <child>
                  <object class="GtkButton" id="open_file">
                    <property name="label" translatable="yes">Open File</property>
                    <property name="focusable">true</property>
                    <signal name="clicked" handler="on_add_file"/>

                    <style>
                      <class name="suggested-action"/>
                      <class name="pill"/>
                    </style>
                  </object>
                </child>

                <child>
                  <object class="GtkButton" id="open_folder">
                    <property name="label" translatable="yes">Open Folder</property>
                    <signal name="clicked" handler="on_add_folder"/>

                    <style>
                      <class name="pill"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
