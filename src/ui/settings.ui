<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EartagSettingsWindow" parent="AdwPreferencesWindow">
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">File identification</property>

            <!-- TODO: switch these two to AdwSpinRow once libadwaita 1.4 is out -->
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">MusicBrainz confidence treshold</property>

                <child type="suffix">
                  <object class="GtkSpinButton" id="mb_confidence_spinbutton">
                    <property name="valign">center</property>
                    <property name="adjustment">
                      <object class="GtkAdjustment">
                        <property name="lower">0</property>
                        <property name="upper">100</property>
                        <property name="value">50</property>
                        <property name="page-increment">10</property>
                        <property name="step-increment">1</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="yes">AcoustID confidence treshold</property>

                <child type="suffix">
                  <object class="GtkSpinButton" id="aid_confidence_spinbutton">
                    <property name="valign">center</property>
                    <property name="adjustment">
                      <object class="GtkAdjustment">
                        <property name="lower">0</property>
                        <property name="upper">100</property>
                        <property name="value">50</property>
                        <property name="page-increment">10</property>
                        <property name="step-increment">1</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="AdwComboRow" id="cover_size_comborow">
                <property name="title" translatable="yes">Downloaded cover art size</property>

                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item translatable="yes">Do not download covers</item>
                      <item translatable="yes">250 px</item>
                      <item translatable="yes">500 px</item>
                      <item translatable="yes">1200 px</item>
                      <item translatable="yes">Maximum size</item>
                    </items>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
