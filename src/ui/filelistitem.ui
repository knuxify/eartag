<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="EartagFileListItem" parent="GtkBox">
    <property name="hexpand">true</property>
    <property name="spacing">12</property>
    <style>
      <class name="filelist-item"/>
    </style>

    <child>
      <object class="GtkStack" id="cover_edit_stack">
        <property name="transition-type">crossfade</property>

        <child>
          <object class="EartagAlbumCoverImage" id="coverart_image">
            <property name="pixel-size">48</property>
            <property name="hexpand">false</property>
          </object>
        </child>

        <child>
          <object class="GtkCheckButton" id="select_button">
            <property name="halign">center</property>
            <style>
              <class name="selection-mode"/>
              <class name="circular"/>
            </style>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkBox" id="data_box">
        <property name="orientation">vertical</property>
        <property name="hexpand">true</property>
        <property name="halign">fill</property>
        <property name="valign">center</property>
        <property name="spacing">3</property>

        <child>
          <object class="GtkBox">
            <child>
              <object class="GtkStack" id="status_icon_stack">
                <child>
                  <object class="GtkImage" id="error_icon">
                    <property name="icon-name">dialog-warning-symbolic</property>
                    <!-- TRANSLATORS: Shown when hovering over the dot next to modified files on the file list -->
                    <property name="tooltip-text" translatable="yes">File has invalid values</property>
                    <property name="visible">false</property>
                    <property name="margin-end">3</property>
                  </object>
                </child>

                <child>
                  <object class="GtkImage" id="modified_icon">
                    <property name="icon-name">file-modified-symbolic</property>
                    <!-- TRANSLATORS: Shown when hovering over the dot next to modified files on the file list -->
                    <property name="tooltip-text" translatable="yes">File has unsaved changes</property>
                    <property name="visible">false</property>
                    <property name="margin-end">3</property>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkLabel" id="title_label">
                <property name="halign">start</property>
                <property name="hexpand">true</property>
                <property name="ellipsize">middle</property>

                <style>
                  <class name="heading"/>
                </style>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkLabel" id="filename_label">
            <property name="halign">start</property>
            <property name="hexpand">true</property>
            <property name="ellipsize">middle</property>

            <style>
              <class name="subtitle"/>
            </style>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkBox" id="suffixes">
        <property name="spacing">6</property>

        <!-- AcoustID suffix: identification status -->
        <child>
          <object class="GtkStack" id="acoustid_info_stack">
            <property name="visible">false</property>

            <child>
              <object class="GtkLabel" id="acoustid_info_label">
              </object>
            </child>

            <child>
              <object class="GtkSpinner" id="acoustid_loading_icon">
              </object>
            </child>
          </object>
        </child>

        <!-- Sidebar buttons (default) -->
        <child>
          <object class="GtkButton" id="remove_button">
            <property name="icon-name">list-remove-symbolic</property>
            <signal name="clicked" handler="remove_item"/>
            <property name="hexpand">true</property>
            <property name="halign">end</property>
            <property name="valign">center</property>
            <!-- TRANSLATORS: Tooltip for button used to remove file from opened file list -->
            <property name="tooltip-text" translatable="yes">Remove from list</property>

            <style>
              <class name="flat"/>
              <class name="circular"/>
            </style>
          </object>
        </child>
      </object>
    </child>

  </template>
</interface>
